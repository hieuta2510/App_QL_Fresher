<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/bgitemdoes"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tvAcronymit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18dp"
        android:text="PTIT"
        app:layout_constraintTop_toTopOf="@id/tvNameCenterit"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:id="@+id/tvNameCenterit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hoc vien cong nghe Buu chinh vien thong"
        android:textSize="16dp"
        android:textColor="#000C5D"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="-310dp"/>
    <TextView
        android:id="@+id/tvAddressCenterit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="13dp"
        android:text="Km 10, Tran phu"
        app:layout_constraintTop_toBottomOf="@id/tvNameCenterit"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toLeftOf="@id/tvNameCenterit"/>
    <TextView
        android:id="@+id/tvTotalCenterit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tvAddressCenterit"
        android:text="Total freshers: 10"
        android:textSize="13dp"
        android:textStyle="normal"
        app:layout_constraintLeft_toRightOf="parent"
        android:layout_marginLeft="-170dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>