<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/topView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="0dp"
        android:background="@color/colorPrimary"/>

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="-50dp"
        android:src="@drawable/logo"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/nameProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tạ Minh Hiếu"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <LinearLayout
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/emailProfile"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Email: taminhhieune@gmail.com"
            android:textColor="@color/darkgray"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dobProfile"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:text="DoB: 25/10/2001"
            android:textColor="@color/darkgray"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgLogo" />

    </LinearLayout>
    <TextView
        android:id="@+id/personInfoProfile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bgitemdoes"
        android:drawableStart="@drawable/fullname"
        android:text="@string/personal_information"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/changePassProfile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bgitemdoes"
        android:drawableStart="@drawable/ic_lock"
        android:text="@string/changePass"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/phoneProfile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bgitemdoes"
        android:drawableStart="@drawable/ic_phone"
        android:text="@string/contact_phone"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/facebookProfile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bgitemdoes"
        android:drawableStart="@drawable/ic_face"
        android:text="@string/contact_facebook"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/logoutProfile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bgitemdoes"
        android:drawableStart="@drawable/ic_logout"
        android:text="@string/logout"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="20sp"/>


</LinearLayout>