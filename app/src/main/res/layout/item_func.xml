<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bgitemdoes"
    android:orientation="vertical"
    android:layout_marginBottom="5dp"
    android:layout_height="150dp">
    <ImageView
        android:id="@+id/item_func_img"
        android:layout_marginLeft="17dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/manage_fresh"/>

    <TextView
        android:id="@+id/item_func_name"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/item_func_img"
        app:layout_constraintLeft_toLeftOf="@id/item_func_img"
        android:textSize="18dp"
        android:textColor="#000C5D"
        android:text="Manage Fresher"
        android:textStyle="bold"
        android:layout_width="160dp"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>